    <script src="../resources/js/charts.js"></script>
    <nav class="navbar navbar-expand-xl navbar-light" style="background-color: #7A9E7E;">
      <ul class="nav navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/"><img src="../resources/img/stonkpeg.png" width="150px" /></a></li>
        <li class="nav-item"><a class="nav-link" href="/news" style="color:white">News</a></li>
